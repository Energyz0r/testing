PART 3. MODIFY VALUES
ALTER TABLE TELLERS ADD DATE_HIRED DATE;
UPDATE ITEMS SET PRICE = 5.49 WHERE ITEM_ID = '7845';
ALTER TABLE INVOICES DROP COLUMN TOTAL_COST;

