DATABASES
Part 1. Table Creation
CREATE TABLE TELLERS(
    TELLER_ID VARCHAR2(4) PRIMARY KEY,
    FORENAME VARCHAR2(20) NOT NULL,
    SURNAME VARCHAR2(30) NOT NULL
);
CREATE TABLE INVOICES(
    INVOICE_ID VARCHAR2(6) PRIMARY KEY,
    PURCHASE_DATE DATE DEFAULT SYSDATE,
    TELLER_ID VARCHAR2(4) NOT NULL,
    TOTAL_COST NUMBER(8,2),
    FOREIGN KEY (TELLER_ID) REFERENCES TELLERS(TELLER_ID)
);
CREATE TABLE ITEMS(
    ITEM_ID varchar2(6) PRIMARY KEY,
    DESCRIPTION varchar2(50) NOT NULL,
    PRICE number(6,2)
);
CREATE TABLE QUANTITIES (
    INVOICE_ID varchar2(6) NOT NULL ,
    ITEM_ID varchar2(6) NOT NULL ,
    QUANTITY number(8,0),
    PRIMARY KEY(INVOICE_ID, ITEM_ID),
    FOREIGN KEY (INVOICE_ID) REFERENCES INVOICES(INVOICE_ID),
    FOREIGN KEY (ITEM_ID) REFERENCES ITEMS(ITEM_ID)
);

